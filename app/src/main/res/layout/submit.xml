<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/submit_layout"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:scrollbars="none"
>
   <LinearLayout
   android:orientation="vertical"
   android:scrollbars="vertical"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   >
      <TextView
      android:text="@string/location"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      />
      <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:stretchColumns="1"
      >
         <TableRow>
            <TextView
            android:text="@string/country"
            />
            <!-- AutoCompleteTextView  -->
            <EditText
            android:id="@+id/edit_text_country"
            android:singleLine="true"
            android:nextFocusDown="@+id/edit_text_city"
            />
         </TableRow>
         <TableRow>
            <TextView
            android:text="@string/city"
            />
            <!-- AutoCompleteTextView  -->
            <EditText
            android:id="@+id/edit_text_city"
            android:singleLine="true"
            android:nextFocusDown="@+id/edit_text_zip"
            />
         </TableRow>
         <TableRow>
            <TextView
            android:text="@string/postal_code"
            />
            <!-- AutoCompleteTextView  -->
            <EditText
            android:id="@+id/edit_text_zip"
            android:singleLine="true"
            android:inputType="textPostalAddress"
            android:nextFocusDown="@+id/edit_text_printer"
            />
         </TableRow>
      </TableLayout>
      <ImageButton
      android:id="@+id/location_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_menu_mylocation"
      />
      <TextView
      android:text="@string/note"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      />
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
         <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/value"
         />
         <Spinner
         android:id="@+id/spinner"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
      </LinearLayout>
      <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
         <TableRow>
            <TextView
            android:text="@string/short_code"
            />
            <EditText
            android:id="@+id/edit_text_printer"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:width="@dimen/short_code_text_size"
            android:nextFocusDown="@+id/edit_text_serial"
            /><!-- width has no effect because of table -->
         </TableRow>
         <TableRow>
            <TextView
            android:text="@string/serial_number"
            />
            <EditText
            android:id="@+id/edit_text_serial"
            android:singleLine="true"
            android:inputType="textCapCharacters"
            android:width="@dimen/serial_text_size"
            android:nextFocusDown="@+id/edit_text_comment"
            />
         </TableRow>
      </TableLayout>
      <ImageButton
      android:id="@+id/photo_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_menu_camera"
      />
      <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:stretchColumns="1"
      >
         <TableRow>
            <TextView
            android:text="@string/comment"
            />
            <AutoCompleteTextView
            android:id="@+id/edit_text_comment"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:completionThreshold="1"
            />
         </TableRow>
      </TableLayout>
      <TableLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center"
      >
         <TableRow>
            <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            />
         </TableRow>
      </TableLayout>
   </LinearLayout>
</ScrollView>
